    switches:
      netflix_on_menu:
        value_template: "{{ not is_state('media_player.shield', 'playing') and is_state_attr('media_player.shield', 'app_id', 'com.netflix.ninja') }}"
        turn_on:
          service: switch.turn_on
          target:
            entity_id: switch.target
        turn_off:
